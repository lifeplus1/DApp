# Environment Variables - DeFi Yield & Analytics Platform
# Copy to .env and fill in the required values.

# -------- Core Network Configuration --------
# Ethereum RPC endpoint (Sepolia / Mainnet via Infura, Alchemy, etc.)
RPC_URL=https://sepolia.infura.io/v3/YOUR_KEY
# Optional fallback RPC
RPC_URL_FALLBACK=

# Chain ID override (leave blank to auto-detect)
CHAIN_ID=

# -------- Wallet / Keys (DO NOT COMMIT REAL KEYS) --------
# Private key for deployment scripts (use a throwaway test key for Sepolia)
DEPLOYER_PRIVATE_KEY=
# Optional secondary operations key
OPERATIONS_PRIVATE_KEY=

# -------- Subgraph / Data Services --------
# Uniswap V3 subgraph endpoint
UNISWAP_V3_SUBGRAPH=https://api.thegraph.com/subgraphs/name/uniswap/uniswap-v3
# Analytics cache TTL in seconds (default 30)
ANALYTICS_CACHE_TTL=30

# -------- Frontend Build --------
# Public base URL (Vite / CRA style)
VITE_PUBLIC_BASE_URL=http://localhost:5173
# Feature flag: enable experimental analytics dashboard
VITE_FEATURE_ANALYTICS=1

# -------- Security / Monitoring --------
# Sentry (or other) DSN (optional)
SENTRY_DSN=
# Log level: debug|info|warn|error
LOG_LEVEL=info

# -------- Contract Addresses (Auto-generated target) --------
# (These may be overwritten by automation; keep for local dev convenience)
PORTFOLIO_MANAGER_ADDRESS=
STABLE_VAULT_ADDRESS=
UNISWAP_V3_STRATEGY_ADDRESS=
CURVE_STABLE_STRATEGY_ADDRESS=
COMPOUND_STRATEGY_ADDRESS=
AAVE_STRATEGY_ADDRESS=

# -------- Build / CI Flags --------
# Set to 'true' to fail build on TypeScript warnings
STRICT_BUILD=false
# Set to 'true' to enable runtime performance profiling overlays
ENABLE_PROFILING=false

# -------- Analytics Parameters --------
# Window size for volatility (in data points)
VOLATILITY_WINDOW=50
# Sharpe ratio risk-free rate (annualized, decimal)
RISK_FREE_RATE=0.02

# -------- Documentation Automation --------
# Auto-update timestamps (true/false)
DOCS_AUTO_TIMESTAMP=true
# Contract deployment directory for address extraction
DEPLOYMENTS_DIR=stable-yield-aggregator/deployments

# -------- Testing --------
# Hardhat network fork URL (optional)
HARDHAT_FORK_URL=
# Gas reporting toggle
GAS_REPORT=true

# -------- Misc --------
# Reserved for future feature flags
FEATURE_FLAGS=
